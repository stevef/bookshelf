<%= form_with(model: cabinet, local: true) do |form| %>
  <div class='row'>
  	<%= form.select :library_id, Library.all.collect { |x| [x.name, x.id] }, blank: 'Choose a library' %>
  </div>
  <div class='row'>
    <%= form.text_field :name, placeholder: 'Enter library section' %>
  </div>    
  <% if cabinet.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(cabinet.errors.count, "error") %> prohibited this cabinet from being saved:</h2>

      <ul>
      <% cabinet.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
